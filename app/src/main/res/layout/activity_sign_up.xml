<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.codigo.mobilecodetest.ui.SignUpViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.StartupActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plant_detail_app_bar_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="?attr/colorSurface"
            android:animateLayoutChanges="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorSurface"
                app:statusBarScrim="?attr/colorSurface"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true"
                app:expandedTitleTextColor="@android:color/transparent"
                app:collapsedTitleTextColor="@color/textColorMain"
                app:toolbarId="@id/toolbar">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plant_detail_app_bar_height"
                    app:layout_collapseMode="parallax" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/drawerBackgroundColor"
                        android:padding="@dimen/margin_normal"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_sign_up_title"
                            android:textStyle="bold"
                            android:textColor="@color/textColorMain"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorMain"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:text="@string/lbl_sign_up_banner_body_text"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_mandatory"
                            android:textColor="@color/textColorMainLight"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/guitar"
                        android:layout_gravity="center|end"/>
                </FrameLayout>
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:titleTextColor="?attr/colorOnSurface"
                    app:layout_collapseMode="pin"
                    app:title="@string/title_sing_up"
                    app:contentInsetStartWithNavigation="0dp"
                    app:navigationIcon="@drawable/ic_back_navigation"
                    app:navigationIconTint="@color/textColorMain"/>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_scrollview_bottom"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_normal">
                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/lbl_first_name"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etFirstName"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFirstName"
                    android:nextFocusForward="@id/etLastName"
                    app:errorEnabled="true"
                    app:error="@{viewModel.firstNameValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        app:setOnEditorActionListener="@{viewModel.firstNameEditorActionListener}"
                        android:text="@={viewModel.firstNameLiveData}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etFirstName"
                    android:text="@string/lbl_last_name"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusForward="@id/etEmailAddress"
                    android:id="@+id/etLastName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLastName"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true"
                    app:error="@{viewModel.lastNameValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        app:setOnEditorActionListener="@{viewModel.lastNameEditorActionListener}"
                        android:text="@={viewModel.lastNameLiveData}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etLastName"
                    android:text="@string/lbl_email_address"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etEmailAddress"
                    android:nextFocusForward="@id/etDob"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailAddress"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true"
                    app:error="@{viewModel.emailValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        app:setOnEditorActionListener="@{viewModel.emailEditorActionListener()}"
                        android:text="@={viewModel.emailLiveData}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/layoutDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/etEmailAddress">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_dob"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etDob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            android:nextFocusForward="@id/etNationality"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@android:color/transparent"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:error="@{viewModel.dobValidator.error}">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:clickable="true"
                                android:focusable="false"
                                app:setOnEditorActionListener="@{viewModel.dobEditorActionListener}"
                                android:imeOptions="actionNext"
                                android:text="@={viewModel.dobLiveData}"
                                android:drawableEnd="@drawable/dob"
                                android:hint="@string/hint_dob"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="6dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_male"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="end|bottom"
                            android:textAllCaps="false"
                            android:textColor="@color/textColorMainLight"
                            app:backgroundTint="@color/drawerBackgroundColor"
                            app:cornerRadius="@dimen/corner_radius_round"
                            app:strokeColor="@color/drawerBackgroundColor"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_female"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_gravity="start|bottom"
                            android:textColor="@color/textColorMain"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="@dimen/corner_radius_round"
                            app:strokeColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvNationality"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutDob"
                    android:text="@string/lbl_nationality"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etNationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusForward="@id/etResidence"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNationality"
                    app:errorEnabled="true"
                    app:error="@{viewModel.nationalityValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        app:setOnEditorActionListener="@{viewModel.nationalityEditorActionListener}"
                        android:text="@={viewModel.nationalityLiveData}"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvResidence"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etNationality"
                    android:text="@string/lbl_residence"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etResidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusForward="@id/etMobileNo"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvResidence"
                    app:errorEnabled="true"
                    app:error="@{viewModel.residenceValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        app:setOnEditorActionListener="@{viewModel.residenceEditorActionListener}"
                        android:text="@={viewModel.residenceLiveData}"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvMobileNo"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etResidence"
                    android:text="@string/lbl_mobile_no"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMobileNo"
                    app:errorEnabled="true"
                    app:error="@{viewModel.mobileNoValidator.error}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        app:setOnEditorActionListener="@{viewModel.mobileEditorActionListener}"
                        android:text="@={viewModel.mobileNoLiveData}"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="bottom"
            app:layout_anchorGravity="bottom"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="@string/btn_create_new_account"
                android:textAllCaps="false"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="@dimen/corner_radius_medium"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>